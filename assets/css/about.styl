section
  $border-width = 2px
  $spacing-width = (50px - $border-width) / 2

  align-items center
  display flex
  justify-content space-between
  margin-bottom $spacing-width

  &:not(:last-child)
    border-bottom $border-width solid #000 + 50%
    padding-bottom $spacing-width

.fact
  align-items center
  display flex
  margin 10px auto

  span
    flex 1
    margin-left 30px

  svg
    height 40px
    width 40px

.section-content
  margin-left 30px
  max-width 50vw
  text-align justify

.section-name
  max-width 260px
  text-align center

.stack-items
  padding-left 20px