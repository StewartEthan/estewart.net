@require '../main/vars'
@require '../main/mixins'

.content
  max-width 350px

h1
  text-align center

#generator
  display grid
  grid-row-gap 20px

  label
    display grid
    grid-row-gap 5px
    
    &[for="dupeToggle"]
      align-items center
      grid-column-gap 10px
      grid-template-columns auto 1fr

      input
        min-height 100%

    input
      text-align center
      width 100%



.output-wrapper
  display grid
  grid-row-gap 5px
  margin 1.5rem auto

  output
    --column-count 4
    display grid
    font-size 1.5em
    grid-column-gap 10px
    grid-row-gap 20px
    grid-template-columns repeat(var(--column-count), 1fr)
    justify-items center

    +break($tiny)
      --column-count 6