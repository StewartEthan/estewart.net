form.edit-villager
  align-items baseline
  display flex
  flex-direction column
  flex-grow 1

  &, & > *
    box-sizing border-box

  & > *
    margin-bottom 10px
    width 100%
  
  .controls
    display grid
    grid-column-gap 10px
    grid-template-columns 1fr 1fr
  
  .marriage
    align-items center
    display flex

.villager-list
  display grid
  grid-row-gap 7px
  margin-right 10%
  width 30%

  .villager
    --villager-btn-width 25%
    display grid
    flex-grow 1
    grid-column-gap 10px
    grid-template-columns 2fr 1fr 1fr

    span
      line-height 2em

.villagers-wrapper
  align-items flex-start
  display flex