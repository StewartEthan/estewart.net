form
  align-items baseline
  display flex
  flex-direction column

  input
    margin-bottom 5px

.villager-list
  display grid
  grid-row-gap 7px
  width 30%

  .villager
    --villager-btn-width 25%
    display grid
    grid-column-gap 10px
    grid-template-columns 1fr repeat(2, var(--villager-btn-width))