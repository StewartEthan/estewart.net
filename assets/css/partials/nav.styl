nav
  background-color var(--color-primary)
  color var(--color-main-light)
  font-family var(--font-heading-family)
  font-size 1.25rem
  text-shadow 1.5px 1.5px 3px black

  +break()
    font-size 1.5rem

  ul
    display grid
    grid-gap 0.375rem
    grid-template-columns repeat(auto-fit, minmax(5rem, 1fr))
    margin 0

    li
      letter-spacing 2px
      padding 10px 0
      text-align center

      a
        color white
        cursor pointer
        text-decoration none
        text-transform uppercase
        transition 250ms

        &:hover,
        &:focus
          font-weight 900
          letter-spacing 5px

        &:focus
          outline none
          text-decoration underline

        &:visited
          color white
