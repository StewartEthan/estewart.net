nav
  background-color $primary-blue
  color white
  font-family $heading-font
  font-size 1.1rem
  grid-area nav
  text-shadow 1.5px 1.5px 3px black

  +break()
    font-size 1.5rem
  +break($small)
    flex-grow 1

  ul
    display grid
    grid-template-columns repeat(4, 1fr)
    margin 0

    li
      font-family $heading-font
      letter-spacing 2px
      padding 10px 0
      text-align center

      a
        color white
        cursor pointer
        text-decoration none
        text-transform uppercase
        transition 250ms

        &:hover,
        &:focus
          font-weight 900
          letter-spacing 5px

        &:focus
          outline none
          text-decoration underline

        &:visited
          color white
