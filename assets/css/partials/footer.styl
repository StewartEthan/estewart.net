footer
  background-color $primary-blue
  color white
  font-family $heading-font
  padding 15px 30px

  a
    color white
    cursor pointer

    &:hover
      text-decoration underline
  
  & > div
    display flex
    flex-direction column
    margin auto
    max-width 350px

    & > div
      text-align center

    .icon-credit
      font-size 0.65rem

    .social
      display flex
      justify-content space-around
      margin 15px 0

      a
        --border-color transparent
        
        svg
          border 1px solid var(--border-color)
          padding 4px
          transition 0.15s linear all
          size(25px)

        &:focus
          --border-color white
          outline none
        
        &:focus,
        &:hover
          svg
            transform scale(1.25)

            g > *
              fill $gray-accent