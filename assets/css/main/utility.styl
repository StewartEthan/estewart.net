size(w, h = w)
  height h
  width w

h1
  padding 15px

  &:not(.landing)
    padding-left 0

input
  border 1px solid #ccc
  border-radius 6px
  box-sizing border-box
  font-size 1em
  padding 7px

input[type="checkbox"] + label
  cursor pointer
  margin-left 5px

label
  cursor pointer

small
  font-weight bold

  &.normal
    font-weight normal

ul, ol
  &.no-pad
    -webkit-padding-start 0
    -moz-padding-start 0
    -ms-padding-start 0
    -o-padding-start 0

    list-style none

.arrow-list
  list-style none
  margin-left -15px

  li::before
    content "\27A5\00a0"

.center-content
  margin 0 auto
  max-width 75vw

  & > h1
    text-align center
  & > p
    text-align justify
  
  +break($normal)
    max-width 40vw

.e // Doing it like this so if I ever change my prefix, I only have to change it once
  $border-radius = 6px

  &-alert
    background-color $alert-bkgd-color
    border 3px solid $alert-bdr-color
    border-radius $border-radius
    cursor default
    padding 10px 15px
    position relative

    &--warn
      background-color $warn-alert-bkgd-color
      border-color $warn-alert-bdr-color

    & button&__close-btn
      background transparent
      border none
      cursor pointer
      padding 0 5px 0 0
      position absolute
      right 0
      top 0

      &:before
        content 'âœ˜'
        font-size 1.25rem
  &-btn
    background $btn-bkgd-color
    border 1px solid $btn-bdr-color
    border-radius $border-radius
    cursor pointer
    font-size calc(1em - 0.25px)
    letter-spacing 0.25px
    padding 7px 10px
    text-align center
    transition filter 100ms linear

    &--cta
      background $cta-btn-color
      border none
      color white
      font-size 1em
      text-shadow 1px 1px 1px #333
    
    &--large
      font-size 1.25rem
      padding 0.75rem 0.5rem

    &:hover
      filter brightness(90%)
  
  &-card
    --shadow-offset 1px
    border-radius $border-radius
    box-shadow var(--shadow-offset) var(--shadow-offset) 4px 1px $gray-accent + 25%
    padding 15px

    &--small
      --shadow-offset 0.75px
      padding 5px 10px

.error
  color $danger-red-dark

.fake-link
  border none
  background inherit
  color $primary-blue
  cursor pointer
  font-family $heading-font
  font-size 13pt
  text-decoration underline

.flex
  display flex

  &.sp-between
    justify-content space-between
  
  &.sp-around
    justify-content space-around

.force-block
  display block

.hide
  display none !important

.invis
  visibility hidden !important

  & > *
    visibility hidden !important

.spinner
  border 16px solid #f3f3f3
  border-top 16px solid $primary-blue
  border-right 16px solid $primary-blue
  border-radius 50%
  margin 10px auto
  width 120px
  height 120px
  animation spin 1.5s linear infinite

@keyframes spin
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)
