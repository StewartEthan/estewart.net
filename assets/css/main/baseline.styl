main, footer .credits
  a
    border-bottom 1px solid currentColor
    text-decoration none
    transition all 125ms ease-in-out

    &:focus,
    &:hover
      filter brightness(50%)
      outline none

h1,h2,h3,h4
  color var(--font-heading-color)
  font-family var(--font-heading-family)
  font-weight 100
        
