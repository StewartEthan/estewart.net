// Styles for the body
:root
  font-size 16px

html, body
  margin 0
  padding 0

body
  background $gray-accent

  & > div
    box-shadow 0px 0px 50px 0px black
    display flex
    flex-direction column;
    height 100vh
    margin auto
    max-width $normal
    min-height $doc-min-height
    min-width 310px

    main
      background-color white
      flex-grow 1
      font-family $primary-font
      font-size 1em
      padding 10px

      & > div
        background-color white
        line-height 25px
        margin 0 auto
        width 90%

        & > h1
          font-family $heading-font

        a
          border-bottom 2px solid transparent
          // color $primary-blue + 20%
          color $logo-color - 10%
          font-family "Trebuchet MS", Helvetica, sans-serif
          font-size 13pt
          text-decoration none
          transition border-bottom-color 150ms ease-in-out, color 200ms ease-in-out

          &:hover
            $text-dec-color = $logo-color - 50%
            border-bottom-color $text-dec-color
            color $text-dec-color

@media print
  .print-hide
    display none
